doctype html
html
    head
        title Add Movie
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    body.bg-dark
        .container-fluid
            .row
                .col.p-0
                    header
                        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
                            .container-fluid
                                a.navbar-brand(href="/") Movies
                                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
                                    span.navbar-toggler-icon
                                #navbarSupportedContent.collapse.navbar-collapse
                                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                                        li.nav-item
                                            a.nav-link(href="/add-movie") New Movie
            .row
                .col.mt-5
                    form(method="POST" action="/add-movie")
                        .form-group
                            label.text-light(for="movieName") Movie Name
                            input#movieName.form-control(type="text" name="name" required)
                        .form-group
                            label.text-light(for="movieDescription") Movie Description
                            textarea#movieDescription.form-control(name="description" required) 
                        .form-group
                            label.text-light(for="movieText") Movie Text
                            textarea#movieText.form-control(name="text" required)
                        .form-group
                            label.text-light(for="moviePoster") Movie Picture URL
                            input#moviePoster.form-control(type="text" name="poster")
                        .form-group
                            label.text-light(for="movieGenre") Movie Genre
                            select#movieGenre.form-select(name="genre")
                                option.selected(value="Detektiv") Detective
                                option(value="Klassika") Classics
                                option(value="Komediya") Comedy
                                option(value="Romantika") Romance
                                option(value="Fantastika") Fantasy
                        button.btn.btn-primary.mt-3.mb-3(type="submit") Submit
            .row
                .col.p-0
                    footer.text-center.bg-dark.text-light.p-5
