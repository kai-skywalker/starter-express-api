doctype html
html
    head
        title Edit Movie
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
    body.bg-dark
        .container-fluid
            .row
                .col.p-0
                    header
                        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
                            .container-fluid
                                a.navbar-brand(href="/") Movies
                                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
                                    span.navbar-toggler-icon
                                #navbarSupportedContent.collapse.navbar-collapse
                                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                                        li.nav-item
                                            a.nav-link(href="/add-movie") Add Movie
            .row
                .col.mt-5
                    form(id="editMovieForm", action=`/edit-movie/${movie.id}`, method="POST")
                        .form-group
                            label.text-light(for="name") Name
                            input.form-control(type="text", id="name", name="name", value=movie.name, required)
                        .form-group                      
                            label.text-light(for="description") Description:
                            input.form-control(type="text", name="description", value=movie.description, required)
                        .form-group    
                            label.text-light(for="text") Text:
                            textarea.form-control(id="text", name="text", required)= movie.text                        
                        .form-group    
                            label.text-light(for="genre") Genre:
                            select.form-select(id="genre", name="genre", required)
                                each genre in ['Fantasy', 'Science Fiction', 'Romance', 'Mystery', 'Horror']
                                    option(value=genre)= genre
                        .form-group
                            label.text-light(for="poster") Picture URL:
                            input.form-control(type="text", id="poster", name="poster", value=movie.poster)
                        button.mt-2.mb-2.btn.btn-success(type="submit") Save Changes
            .row
                .col.p-0
                    footer.text-center.bg-dark.text-light.p-5
